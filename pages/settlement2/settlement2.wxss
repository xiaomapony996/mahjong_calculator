/* pages/settlement2/settlement2.wxss */

.page{
	position: absolute;
	margin-left: 0.2rem;
	margin-right: 0.2rem;
}
.main{
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.keyboard{
	border: 1px solid black;
	border-radius: 10px;
	background-color: cornsilk;
	opacity: 0.95;
	top: 0;
	width: auto;
}
image{
	border: 1px solid black;
	height: 2.6rem;
	width:  2rem;
	border-radius: 5px;
	margin-left: 0.2rem;
	margin-right: 0.2rem;
}
p{
	font-weight: bolder;
	display: flex;
	flex-direction: column;
	align-items: baseline;
	margin-left: 0.3rem;
	margin-bottom: 0.1rem;
}
.player{
	border: 1px solid black;
	margin-bottom: 0.2rem;
	margin-left: 0.2rem;
	width: auto;
	border-radius: 10px;
	margin-top: 0.2rem;
	margin-right: 0.1rem;
}
.player_selected{
	border: 1px solid black;
	margin: 0.4rem;
	border-radius: 10px;
}
.btn_del{
	border: none;
}
button{
	border: 1px solid black;
	margin: 0.5rem;
}
.settlement_background{

	width: 100%;
	height: 100%;
	background-color: cornsilk;
}
.settlement_content{
	position: absolute;
}
.btn1{
	top: 50%;
	left: 25%;
}
